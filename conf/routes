# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Tasks
GET     /                           controllers.AppController.index
GET     /websocket/                 controllers.AppController.indexWS


# Map static resources from the /public folder to the /assets URL path
GET     /assets/javascripts/routes  controllers.AppController.javascriptRoutes
GET     /assets/*file               controllers.Assets.at(path="/public", file)



#api access routes, all wrapped in authorized
#user-level operations
GET /user/follow/:uid                   controllers.AppController.follow(uid: String)
GET /user/unfollow/:uid                 controllers.AppController.unfollow(uid: String)
GET /user/info/:uid                     controllers.AppController.user_info(uid: String)

#post-level operations
GET /post/favorite/:post_id             controllers.AppController.favorite(post_id: String)
GET /post/unfavorite/:post_id           controllers.AppController.unfavorite(post_id: String)
GET /post/delete/:post_id               controllers.AppController.delete_post(post_id: String)
GET /post/info/:post_id                 controllers.AppController.post_info(post_id: String)





#login flow
GET /logout  							controllers.AppController.logout
GET /login  							controllers.AppController.login

POST /login       						controllers.AppController.login2
POST /register  						controllers.AppController.register
